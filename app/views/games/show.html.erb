
<% if @game %>
    <center><h1> Place Your Bets, and Win BIG!!! </h1></center>
    <center><h2> <%= @game.name %> </h1></center>

    <%= render partial: "game", locals: {game: @game} %>

    <center><%= link_to 'See all the current bets on this Game', game_bets_path(@game) %>
    <br><br>
    <%= button_to 'Return to all Games', games_path %></center>
<% else %>
    <h2>404</h2><h3>Not Found</h3>
    <%= button_to 'Return to all Games', games_path %>
<% end %>