<% if @bet.errors.any? %>
  <% @bet.errors.full_messages.each do |message|%>
     <h3><%= message %> </h3>
  <%end%>
<%end%>

<%= form_for ([@game, @bet]) do |f| %>

    <%= f.label :amount %>
    <%= f.number_field :amount %>
    <%= f.label :date %>
    <%= f.date_field :date %>
   
    <%= f.submit %> 
<% end %> 

